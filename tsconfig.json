{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES5",
    "module": "ES2015",
    "lib": ["ES2015"],
    "strict": true,
    "declaration": true,
    "declarationDir": "dist",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
